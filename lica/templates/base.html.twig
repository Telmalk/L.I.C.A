            </form>
            <div class="header-connect-register">
                <a class="header-connect-register-link" href="./registerUser">S'inscrire</a>
            </div>
        </div>
    </header>
<div class="back-to-top"><i class="fas fa-chevron-up"></i></div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('/scripts/burger.js') }}"></script>
    <script src="{{ asset('/scripts/smoothScroll.js') }}"></script>
{% endblock %}
</body>
</html>